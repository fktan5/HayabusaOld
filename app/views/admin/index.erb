<h1> Admin Menu </h1>

<p> <%= link_to "New", :action => :new %></p>

<% @sites.each do | site | %>

	<div>
		<%= site.visible %>
		<%= link_to site.title, :action => "edit", :id => site.id %>
  	<%= site.url %>
		<%= site.comment %>
		<%= link_to "Delete", {:action => :delete, :id => site.id}, :confirm => "OK?" %>
	</div>

<% end %>	

